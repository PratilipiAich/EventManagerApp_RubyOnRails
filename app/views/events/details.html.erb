 <h2> Short description of events. </h2>
<ul type="square">
<li>NAME:<%= @event.name %></li>
<li>DESCRIPTION:<%= @event.description %></li>
<li>DURATION:<%= @event.duration %></li>
</ul>
<% if !@participants.empty? %>
<h3> Participants:</h3>
<% end %>


<table class="table">
<% @participants.each do |participant| %>
    <tr>
    <td>Name: <%= participant.name %></td>
    <td>Age: <%= participant.age %></td>
    <td>Gender: <%= participant.gender %></td>
    <td>Email_ID: <%= participant.email %></td></tr>

<% end %>
</table>
